{
  "settings": {
    "analysis": {
      "analyzer": {
        "raw_lowercase": {
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "organization": {
      "dynamic_templates": [{
        "string_fields": {
          "mapping": {
            "index": "analyzed",
            "omit_norms": true,
            "type": "string",
            "analyzer": "french",
            "fields": {
              "lowercase": {
                "index": "analyzed",
                "analyzer": "raw_lowercase",
                "ignore_above": 256,
                "type": "string"
              },
              "raw": {
                "index": "not_analyzed",
                "ignore_above": 256,
                "type": "string"
              }
            }
          },
          "match_mapping_type": "string",
          "match": "*"
        }
      }],
      "properties": {
        "addresses": {
          "type": "nested",
          "properties": {
            "telephones": {
              "type": "nested"
            }
          }
        }
      }
    },
    "person": {
      "_parent": {
        "type": "organization"
      },
      "dynamic_templates": [{
        "string_fields": {
          "mapping": {
            "index": "analyzed",
            "omit_norms": true,
            "type": "string",
            "analyzer": "french",
            "fields": {
              "lowercase": {
                "index": "analyzed",
                "analyzer": "raw_lowercase",
                "ignore_above": 256,
                "type": "string"
              },
              "raw": {
                "index": "not_analyzed",
                "ignore_above": 256,
                "type": "string"
              }
            }
          },
          "match_mapping_type": "string",
          "match": "*"
        }
      }]
    }
  }
}
